{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "lib": ["ES2022"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "incremental": true,
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@experimentlab/shared/*": ["packages/shared/src/*"],
      "@experimentlab/api/*": ["packages/api/src/*"],
      "@experimentlab/dashboard/*": ["packages/dashboard/src/*"],
      "@experimentlab/sdk/*": ["packages/sdk/src/*"]
    }
  },
  "references": [
    { "path": "./packages/shared" },
    { "path": "./packages/api" },
    { "path": "./packages/dashboard" },
    { "path": "./packages/sdk" }
  ],
  "exclude": ["node_modules", "**/dist", "**/build", "**/.next"]
}